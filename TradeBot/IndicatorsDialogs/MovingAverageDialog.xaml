<Window x:Class="TradeBot.MovingAverageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeBot"
        mc:Ignorable="d"
        Title="Add 'Moving Average' indicator" Height="235" Width="400"
        ResizeMode="CanMinimize">
    <Grid Margin="10">

        <StackPanel Orientation="Vertical"
                    Margin="0 8">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="PeriodTextBlock"
                           Opacity=".6"
                           FontSize="13"
                           VerticalAlignment="Center">
                    Period
                </TextBlock>
                <TextBlock x:Name="PeriodErrorTextBlock"
                           Opacity=".6"
                           FontSize="13"
                           Margin="5 0 0 0"
                           VerticalAlignment="Center"
                           Foreground="Red" />
            </StackPanel>

            <TextBox x:Name="PeriodTextBox"
                     Foreground="#303030"
                     FontSize="16"
                     VerticalContentAlignment="Center"
                     Height="28"
                     Margin="0 8">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
                12
            </TextBox>

            <TextBlock x:Name="TypeTextBlock"
                       Opacity=".6"
                       FontSize="13"
                       VerticalAlignment="Center">
                Type
            </TextBlock>

            <ComboBox x:Name="TypeComboBox"
                      Height="28"
                      Margin="0 8"
                      VerticalContentAlignment="Center"
                      IsReadOnly="True" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 8">
                <Button x:Name="AddButton"
                        Margin="8 0"
                        Style="{StaticResource PrimaryButton}"
                        Click="addButton_Click">
                    Add
                </Button>

                <Button x:Name="CancelButton"
                        Margin="8 0 0 0"
                        Style="{StaticResource SecondaryButton}"
                        Click="cancelButton_Click">
                    Cancel
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
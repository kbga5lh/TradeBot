 <Window x:Class="TradeBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeBot"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="TradeBot" Height="785" Width="800"
        MinHeight="785" MinWidth="680"
        Background="#F9F9F9">
    <Grid Height="Auto" Width="Auto">
        <TabControl x:Name="tabControl">
            <TabItem Header="Tab 1">
                <local:RealTimeTrading/>
            </TabItem>
            <TabItem Header="Tab 2">
                <local:RealTimeTrading/>
            </TabItem>
            <TabItem x:Name="AddTabButton" Selector.Selected="AddTabButton_Selected"
                     Header="+"
                     BorderBrush="Transparent"
                     Background="Transparent">
            </TabItem>
        </TabControl>
    </Grid>
</Window>
